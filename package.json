{
  "name": "browser-extension",
  "version": "0.0.1",
  "description": "Browser Extension Boilerplate",
  "engines": {
    "node": ">=16.13.1",
    "npm": ">=8.1.2"
  },
  "scripts": {
    "test": "ts-mocha test/**/*.ts",
    "test-watch": "ts-mocha test/**/*.ts -w --watch-files '**/*.ts'",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "init:profile": "mkdirp tmp/profile/chrome tmp/profile/brave tmp/profile/firefox",
    "build": "cross-env NODE_ENV=production webpack",
    "build:win-chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js",
    "build:mac-chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js",
    "build:win-firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js",
    "build:mac-firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js",
    "build:win-safari": "cross-env NODE_ENV=development webpack --config ./webpack/safari.js && xcrun safari-web-extension-converter dist/safari-prebuild --project-location dist/safari --force --no-open && rm -rf safari-prebuild",
    "build:mac-safari": "cross-env NODE_ENV=development webpack --config ./webpack/safari.js && xcrun safari-web-extension-converter dist/safari-prebuild --project-location dist/safari --force --no-open && rm -rf safari-prebuild",
    "watch-win": "cross-env NODE_ENV=development webpack -w",
    "watch-mac": "cross-env NODE_ENV=development webpack -w",
    "watch:win-chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js -w",
    "watch:mac-chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js -w",
    "watch:win-firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js -w",
    "watch:mac-firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js -w",
    "watch:win-safari": "npm run init:safari && cross-env NODE_ENV=development webpack --config ./webpack/safari.js -w",
    "watch:mac-safari": "npm run init:safari && cross-env NODE_ENV=development webpack --config ./webpack/safari.js -w",
    "reload:win-chrome": "cross-env web-ext --source-dir=dist\\chrome run -t chromium --chromium-binary  \"C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe\" --start-url example.com",
    "reload:mac-chrome": "web-ext --source-dir=dist/chrome run -t chromium --chromium-binary  %ProgramFiles%\\Google\\Chrome\\Application\\chrome.exe --start-url example.com --chromium-profile tmp/profile/chrome --profile-create-if-missing --keep-profile-changes",
    "reload:win-brave": "web-ext --source-dir=dist\\chrome run -t chromium --chromium-binary /Applications/Brave\\ Browser.app/Contents/MacOS/Brave\\ Browser --start-url example.com --chromium-profile tmp/profile/brave --profile-create-if-missing --keep-profile-changes",
    "reload:mac-brave": "web-ext --source-dir=dist/chrome run -t chromium --chromium-binary /Applications/Brave\\ Browser.app/Contents/MacOS/Brave\\ Browser --start-url example.com --chromium-profile tmp/profile/brave --profile-create-if-missing --keep-profile-changes",
    "reload:win-firefox": "web-ext --source-dir=dist\\firefox run --start-url example.com --firefox-profile tmp/profile/firefox --profile-create-if-missing --keep-profile-changes",
    "reload:mac-firefox": "web-ext --source-dir=dist/firefox run --start-url example.com --firefox-profile tmp/profile/firefox --profile-create-if-missing --keep-profile-changes",
    "start:win-chrome": "concurrently npm:watch:win-chrome npm:reload:win-chrome",
    "start:mac-chrome": "concurrently npm:watch:mac-chrome npm:reload:mac-chrome",
    "start:win-brave": "concurrently npm:watch:win-chrome npm:reload:win-brave",
    "start:mac-brave": "concurrently npm:watch:mac-chrome npm:reload:mac-brave",
    "start:win-firefox": "concurrently npm:watch:win-firefox npm:reload:win-firefox",
    "start:mac-firefox": "concurrently npm:watch:mac-firefox npm:reload:mac-firefox",
    "start-win": "concurrently npm:watch:win-chrome npm:reload:win-brave npm:watch:win-firefox npm:reload:win-firefox",
    "start-mac": "concurrently npm:watch:mac-chrome npm:reload:mac-brave npm:watch:mac-firefox npm:reload:mac-firefox"
  },
  "author": "Debdut Karmakar <iawaiponly@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/mocha": "^9.1.1",
    "dexie": "^3.2.2",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "rambda": "^7.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.5.6",
    "ts-mocha": "^10.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/plugin-transform-react-jsx": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@types/chrome": "^0.0.196",
    "@types/webextension-polyfill": "^0.9.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.2",
    "generate-json-from-js-webpack-plugin": "^0.1.1",
    "html-webpack-plugin": "^5.5.0",
    "postcss-loader": "^7.0.1",
    "sass": "^1.54.8",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.8",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.2",
    "web-ext": "^7.2.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1",
    "webpack-merge": "^5.8.0"
  }
}
